<div id="section1" class="container-fluid">

  <p>Future Carousel</p>
</div>

<div id="section2" class="container-fluid">
      <div class="card" id="announcement">
        <div class="card-block">
          <h1 class="card-title">Announcements</h1>
          <p class="card-text">
            <% @announcements.each do |announcement| %>
              <a href="#" data-toggle="modal" data-target="#myModal_<%= announcement.id %>">
          <h3><%= announcement.title %></h3></a>
          <!-- Modal -->
          <div class="modal fade" id="myModal_<%= announcement.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                  <h3><%= link_to announcement.title, announcement %></h3>
                  <p><%= announcement.description %></p>
                </div>
                <div class="modal-footer">
                  <p>
                    <!-- empty for now -->
                  </p>
                </div>
              </div>    
            </div>  
          </div>
          <%= button_to "Past Announcements", announcements_path, :method => "get", class: "btn btn-primary" %>
        </div>
      </div>
    </div>

  <!-- end of modal -->     
  <% end %>

</div>

