<p id="notice"><%= notice %></p>

<h1>Sermons</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sermons.each do |sermon| %>
      <tr>
        <td><%= sermon.title %></td>
        <td><video width="320" height="240" controls>
            <source src="sermon.video" type="video/mp4">
            <source src="sermon.video" type="video/webm">
            <source src="sermon.video" type="video/ogg">
            </video></td>
        <td><%= link_to 'Show', sermon %></td>
        <td><%= link_to 'Edit', edit_sermon_path(sermon) %></td>
        <td><%= link_to 'Destroy', sermon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

